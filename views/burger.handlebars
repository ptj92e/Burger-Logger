<h1>Burger Logger!</h1>

<h2>Burgers that have not been devoured.</h2>

<ul>
    {{#each cats}}
        {{#unless eaten}}
            <li>
                {{name}}
                <button class="devour" data-id="{{this.id}}">Devour!</button>
            </li>
        {{/unless}}
    {{/each}}
</ul>

<h2>Burgers that have been devoured.</h2>

<ul>
    {{#each cats}}
        {{#if eaten}}
            <li>
                {{name}}
                <button class="delete" data-id="{{this.id}}">Delete!</button>
            </li>
        {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="burgerName" name="name">
    </div>

    <button id="newBurger" type="submit">Add Burger</button>
</form>