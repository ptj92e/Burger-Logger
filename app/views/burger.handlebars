<h1>Burger Logger!</h1>

<h2>Burgers that have not been devoured.</h2>

<ul>
    {{#each cats}}
        {{#unless eaten === false}}
            <li>
                {{name}}
                <button class="" data-id="{{this.id}}">DELETE!</button>
            </li>
        {{/unless}}
    {{/each}}
</ul>

<h2>Burgers that have been devoured.</h2>

<ul>
    {{#each cats}}
        {{#if eaten === true}}
            <li>
                {{name}}
                <button class="" data-id="{{this.id}}">DELETE!</button>
            </li>
        {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <button type="submit">Add Burger</button>
</form>